{% extends 'base.html.twig' %}

{% block title %}envois de recette par mail{% endblock %}

{% block stylesheets %}
    <style>

    body{
       background-color: #F0F0F0;
    }
    .head .body .author{
        margin: 1em;
    }
        img {
           float: right; 
           margin: 0 1em 2em 1em;
           width: 250px;
        }
        ul {
            list-style: none;
        }
        h3 {
            text-align: left;
        }
    </style>
{% endblock %}

{% block body %}
    <div id="container">}
        <div class="title">
            <h2>{{recipe.name}}</h2>
        </div>
        <div class='head'>
            {% if recipe.picture != null %}
                <img src="{{email.image(asset( recipe.picture ))}}" alt="photo du plat {{recipe.name}}">
            {% endif %}
            
            <h3>Informations de la recette :</h3>
            <ul>
                <li><span class="bold">catégorie :</span> {{recipe.category.name}}</li>
                <li><span class="bold">Nombre de personnes :</span> {{recipe.nbPeople}}</li>
                <li><span class="bold">Temps de préparation :</span> {{recipe.preparationTime}}</li>
                <li><span class="bold">Temps de cuisson :</span> {{recipe.cookingTime}}</li>
            </ul>

            <h3>Ingrédients :</h3>
            <ul>
                {% for ingredient in recipe.recipeIngredients %}
                    <li>{{ ingredient.quantity }}</li>
                {% endfor %}
            </ul>
        </div>
        <br>
        <div calss='body'>
            <h3>Etapes :</h3>
            <ol>
                {% for step in recipe.steps %}
                    <li>{{ step.description }}</li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <p class='author'>Cette recette vous est proposé par  {{recipe.author.pseudo}}</p>
{% endblock %}